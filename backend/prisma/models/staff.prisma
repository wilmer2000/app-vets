model Staff {
  staffId String @id @default(uuid())

  specialty Specialty

  entity   Entity? @relation(fields: [entityId], references: [entityId])
  entityId String?

  user        User   @relation(fields: [userStaffId], references: [userId])
  userStaffId String

  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
